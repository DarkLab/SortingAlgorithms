<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/start"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:alpha="0.3"
        android:background="@drawable/circle"
        android:contentDescription="@null"
        android:src="@android:drawable/ic_media_play"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typeTV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0.3"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/sizeTV"
        app:layout_constraintStart_toEndOf="@id/start"
        app:layout_constraintTop_toTopOf="@id/start" />

    <TextView
        android:id="@+id/sizeTV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0.3"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="S"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/paletteTV"
        app:layout_constraintStart_toEndOf="@id/typeTV"
        app:layout_constraintTop_toTopOf="@id/start" />

    <TextView
        android:id="@+id/paletteTV"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0.3"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="P"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/durationTv"
        app:layout_constraintStart_toEndOf="@id/sizeTV"
        app:layout_constraintTop_toTopOf="@id/start" />

    <TextView
        android:id="@+id/durationTv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0.3"
        android:background="@drawable/circle"
        android:gravity="center"
        android:text="1x"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@id/refresh"
        app:layout_constraintStart_toEndOf="@id/paletteTV"
        app:layout_constraintTop_toTopOf="@id/start" />

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:alpha="0.3"
        android:background="@drawable/circle"
        android:contentDescription="@null"
        android:src="@android:drawable/ic_menu_rotate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/congratulationIV"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/white"
        android:contentDescription="@null"
        android:src="@drawable/salute"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>